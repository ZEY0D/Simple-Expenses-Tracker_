@* Ienumerable is an interface that represents a collection of items like a list *@

@model IEnumerable<efinancee.Models.Expense>

    @* here supposed to be the html code page to render with liveserver *@

    <h2>My Expenses</h2>
    <div class ="container">
        <table class = "table table-bordered">
            <thead class = "table-light">
            <tr>
                <th>ID</th>
                <th>Amount</th>
                <th>Category</th>
                <th>Description</th>
                <th>Date</th>
            </tr>
            </thead>

            @* we can write c# code using this '@' *@
            <tbody>
                @foreach (var item in Model){
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.Amount $</td>
                        <td>@item.Category</td>
                        <td>@item.Description</td>
                        <td>@item.Date.ToString("yyyy-MM-dd")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    